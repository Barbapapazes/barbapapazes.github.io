{
  "name": "esteban-soubiran.site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "run-p lint:all:*",
    "lint:all:eslint": "yarn lint:eslint --fix",
    "lint:all:markdownlint": "yarn lint:markdownlint --fix",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern modules/ --ext .js,.vue .",
    "lint:markdownlint": "markdownlint ./content",
    "lint:prettier": "prettier  \"**/*.{js,json,css,scss,vue,html,md}\""
  },
  "lint-staged": {
    "*.{js,json,css,vue,md}": "prettier --write",
    "*.{js,vue}": "eslint --fix",
    "*.md": "markdownlint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@tailwindcss/typography": "^0.4.0",
    "core-js": "^3.9.1",
    "nuxt": "^2.15.3",
    "vue-observe-visibility": "^1.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/tailwindcss": "^4.0.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.4",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "tailwind-scrollbar": "^1.3.1"
  }
}
