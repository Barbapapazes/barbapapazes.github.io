{
  "name": "esteban-soubiran.site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "run-p lint:all:*",
    "lint:all:eslint": "yarn lint:eslint --fix",
    "lint:all:markdownlint": "yarn lint:markdownlint --fix",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern modules/ --ext .js,.vue .",
    "lint:markdownlint": "markdownlint ./content",
    "lint:prettier": "prettier  \"**/*.{js,json,css,scss,vue,html,md}\""
  },
  "lint-staged": {
    "*.{js,json,css,vue,md}": "prettier --write",
    "*.{js,vue}": "eslint --fix",
    "*.md": "markdownlint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/content": "^1.9.0",
    "@nuxtjs/pwa": "^3.0.2",
    "@tailwindcss/typography": "^0.4.0",
    "core-js": "^3.6.5",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.14.6",
    "vue-observe-visibility": "^1.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/tailwindcss": "^3.1.0",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^5.1.3",
    "lint-staged": "^10.4.0",
    "markdownlint-cli": "^0.26.0",
    "postcss": "^7",
    "prettier": "^2.1.2",
    "tailwind-scrollbar": "^1.0.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
